<% if request.path != check_records_not_authorised_path %>
  <%= govuk_header %>
  <%= govuk_service_navigation(
      service_name: t("check_records_service.name"),
      navigation_items: begin
        items = []
        if FeatureFlags::FeatureFlag.active?(:bulk_search)
          items << { href: check_records_search_path, text: "Find a record" }
          items << { href: new_check_records_bulk_search_path, text: "Find multiple records" }
        end

        if current_dsi_user
          items << { href: check_records_sign_out_path, text: "Sign out" }
        elsif request.path != check_records_sign_in_path
          items << { href: check_records_sign_in_path, text: "Sign in" }
        end

        items
      end
    )
  %>
<% end %>
