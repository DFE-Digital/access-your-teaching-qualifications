<%= govuk_header %>
<%= govuk_service_navigation(
      service_name: t("service.name"),
      service_url: qualifications_root_path,
      navigation_items: begin
        items = []

        if current_user
          if FeatureFlags::FeatureFlag.active?(:one_login)
            items << {
              current: current_page?(qualifications_identity_user_path),
              href: qualifications_one_login_user_path,
              text: "Account"
            }
          else
            items << {
              current: current_page?(qualifications_identity_user_path),
              href: qualifications_identity_user_path,
              text: "Account"
            }
          end

          items << { href: qualifications_new_sign_out_path, text: "Sign out" }
        end

        items
      end
    )
%>
